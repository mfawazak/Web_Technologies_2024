<% if(update.success) { %>
    <div class="alert alert-success text-center my-3 container">
        Profile Updated Successfully
    </div>
<% }  %>

<div class="container-fluid bg-dark p-3 d-flex justify-content-center my-3">
    <h2 class="text-light">Hello <span><%=user.firstName %>!</span></h2>
</div>

<div class="container m-auto bg-dark py-3 px-5 border rounded-2 mb-3" data-bs-theme="dark">
    <h5 class="text-light mb-3">Update your Contact Information</h5>
    <form action="/user/profile" method="POST">
        <div class="mb-3">
            <label for="fName" class="text-light">
                First Name
            </label>
            <input type="text" name="firstName" id="fName" class="form-control" value="<%= user.firstName %>"  required>
        </div>
        <div class="mb-3">
            <label for="lName" class="text-light">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lName" value="<%= user.lastName %>" required>
        </div>
        <div class="mb-3">
            <label for="address" class="text-light">Address</label>
            <input type="text" class="form-control" name="address" id="address" value="<%= user.address %>" required>
        </div>
        <div class="mb-3">
            <label for="phone" class="text-light">Phone</label>
            <input type="phone" class="form-control" name="phone" id="phone" value="<%= user.phone %>" required>
        </div>
        <button class="btn btn-primary">Update Profile</button>
    </form>

</div>
<div class="container m-auto bg-dark py-3 px-5 border rounded-2 mb-3" data-bs-theme="dark">
    <h5 class="text-light mb-3">Update your Payment Details (Debit Card)</h5>
    <form action="/user/payment" method="POST">
        <div class="mb-3">
            <label for="cardNumber" class="text-light">
               Card Number 
            </label>
            <input type="number" name="number" id="cardNumber" class="form-control" value="<%= card.number || "" %>"  required>
        </div>
        <div class="mb-3">
            <label for="cardExpiry" class="text-light">Expiry</label>
            <input type="text" class="form-control" placeholder="MM/YY" name="expiry" id="cardExpiry" value="<%= card.expiry || "" %>" required>
        </div>
        <div class="mb-3">
            <label for="CVV" class="text-light">CVV</label>
            <input type="number" class="form-control" name="cvv" id="CVV" value="<%= card.cvv || "" %>" required>
        </div>
    
        <button type="submit" class="btn btn-primary">Update Payment Method</button>
    </form>
</div>